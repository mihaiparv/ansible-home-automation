# Home Assistant integration (MQTT discovery)
homeassistant: true

# allow new devices to join
permit_join: true

frontend:
  port: 9080

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: zigbee2mqtt
  # MQTT server URL
  server: 'mqtt://host.docker.internal'
  # MQTT server authentication, uncomment if required: 
  user: "{{ mosquitto_user }}"
  password: "{{ mosquitto_pass_clear }}"

# Serial settings
serial:
  port: 'tcp://192.168.1.11:8888'
  adapter: ezsp

advanced:
  network_key: GENERATE
  log_level: info
  log_output:
    - console